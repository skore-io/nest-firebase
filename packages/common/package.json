{
  "author": "Skore IO",
  "bugs": {
    "url": "https://github.com/skore-io/nest-firebase/issues"
  },
  "license": "MIT",
  "name": "@nest-firebase/common",
  "version": "1.3.0",
  "description": "",
  "homepage": "https://github.com/skore-io/nest-firebase/blob/master/packages/common/README.md",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "directories": {
    "dist": "dist",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skore-io/nest-firebase.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "test": "FIREBASE_CONFIG=some-config GCLOUD_PROJECT=some-project jest --coverage"
  },
  "jest": {
    "rootDir": ".",
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/{!(app.module|index),}.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "json",
      "lcovonly",
      "text",
      "clover"
    ]
  },
  "dependencies": {
    "@nestjs/config": "^0.4.0",
    "google-auth-library": "^6.0.0"
  }
}
