{
  "author": "Skore IO",
  "license": "ISC",
  "name": "@nest-firebase/pubsub",
  "version": "1.0.2",
  "description": "",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "directories": {
    "dist": "dist",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "test": "FIREBASE_CONFIG=some-config GCLOUD_PROJECT=some-project jest --coverage"
  },
  "dependencies": {
    "@golevelup/nestjs-discovery": "^2.2.3",
    "lodash.flatmap": "^4.5.0"
  },
  "jest": {
    "rootDir": ".",
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/{!(app.module|index),}.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "json",
      "lcovonly",
      "text",
      "clover"
    ]
  }
}
